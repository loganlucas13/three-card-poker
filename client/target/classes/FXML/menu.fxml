<?xml version = "1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController" stylesheets="@../styles/globals.css, @../styles/menu.css" alignment="CENTER" spacing="100">

    <VBox alignment="TOP_CENTER" spacing="10">
        <Label fx:id="title" text="THREE CARD POKER"></Label>
        <Label fx:id="welcomeText" text="WELCOME TO THREE CARD POKER! CONTINUE BY CLICKING BELOW!"></Label>
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id = "playButton" text="PLAY"></Button>
        <Button fx:id = "rulesButton" text="RULES"></Button>
        <Button fx:id = "quitButton" text="QUIT GAME"></Button>
    </HBox>
</VBox>