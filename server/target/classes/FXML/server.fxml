<?xml version = "1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerController" stylesheets="@../styles/globals.css, @../styles/server.css" alignment="TOP_CENTER" spacing="25">
    <padding>
        <Insets top="20" right="0" bottom="0" left="0"/>
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="title" text="SERVER DISPLAY"></Label>

        <HBox alignment="CENTER" spacing="10">
            <Label text="PORT:"></Label>
            <Label fx:id="portDisplay" text="placeHolder"></Label>
        </HBox>
    </VBox>

    <ListView fx:id="eventList" maxWidth="1200"></ListView>

    <HBox alignment="CENTER" spacing="10">
        <Label text="NUMBER OF CLIENTS:"></Label>
        <Label fx:id="clientCount" text="0"></Label>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="startServerButton" text="START SERVER"></Button>
        <Button fx:id="closeServerButton" text="CLOSE SERVER"></Button>
    </HBox>
</VBox>